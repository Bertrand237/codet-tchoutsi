rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check file size (max 10MB for images, 50MB for videos)
    function isValidImageSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    function isValidVideoSize() {
      return request.resource.size < 50 * 1024 * 1024;
    }
    
    // Helper function to check if file is an image
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // Helper function to check if file is a PDF
    function isPDF() {
      return request.resource.contentType == 'application/pdf';
    }
    
    // Helper function to check if file is a video
    function isVideo() {
      return request.resource.contentType.matches('video/.*');
    }
    
    // Payment proofs storage
    match /preuves/{fileName} {
      // Anyone authenticated can upload their payment proof
      allow create: if isAuthenticated() && 
                      (isImage() || isPDF()) &&
                      isValidImageSize();
      
      // Anyone authenticated can read proofs
      allow read: if isAuthenticated();
      
      // No one can delete proofs (only admins via Firebase Console for data integrity)
      allow delete: if false;
    }
    
    // Blog images storage
    match /blog/{fileName} {
      // Only admin and président can upload blog images
      allow create: if isAuthenticated() && 
                      isImage() &&
                      isValidImageSize();
      
      // Anyone can read blog images
      allow read: if true;
      
      // Only allow delete via Firebase Console for blog integrity
      allow delete: if false;
    }
    
    // Advertisements storage
    match /ads/{fileName} {
      // Only admin and président can upload ads
      allow create: if isAuthenticated() && 
                      isVideo() &&
                      isValidVideoSize();
      
      // Anyone can read ads
      allow read: if true;
      
      // Only allow delete via Firebase Console for ad integrity
      allow delete: if false;
    }
  }
}
